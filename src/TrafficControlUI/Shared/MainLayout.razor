@inherits LayoutComponentBase

<PageTitle>Traffic Control</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <a href="/.auth/logout">Log out</a>
                </Authorized>
                <NotAuthorized>
                    <a href="/.auth/login/aad?post_login_redirect_uri=/">Log in</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <div>
            @Body
        </div>
    </main>
</div>
